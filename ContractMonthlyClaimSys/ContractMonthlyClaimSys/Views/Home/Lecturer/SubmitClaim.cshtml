@model dynamic
@{
    ViewData["Title"] = "Submit Claim";
}

<h2 class="text-[#1C160C] tracking-light text-[32px] font-bold leading-tight px-4 text-left pb-3 pt-6">Submit a New Claim</h2>

<form class="px-4 py-3">
    <div class="flex flex-col gap-4">
        <!-- Form Input for Hours Worked -->
        <div class="flex flex-col">
            <label class="text-[#1C160C] text-base font-normal leading-normal pb-1" for="HoursWorked">Hours Worked:</label>
            <input type="number" id="HoursWorked" name="HoursWorked" class="h-10 px-3 rounded-md border border-[#1C160C] text-[#1C160C]" />
        </div>

        <!-- Form Input for Hourly Rate -->
        <div class="flex flex-col">
            <label class="text-[#1C160C] text-base font-normal leading-normal pb-1" for="HourlyRate">Hourly Rate:</label>
            <input type="number" id="HourlyRate" name="HourlyRate" class="h-10 px-3 rounded-md border border-[#1C160C] text-[#1C160C]" />
        </div>

        <!-- Submit Button -->
        <button type="submit" class="flex min-w-[84px] cursor-pointer items-center justify-center overflow-hidden rounded-full h-12 px-5 bg-[#019863] text-[#FFFFFF] text-base font-bold leading-normal tracking-[0.015em]">
            Submit Claim
        </button>
    </div>
</form>
